{
  "name": "electron-app",
  "version": "0.0.1",
  "private": true,
  "main": "./client/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "electron": "electron ./client/main.js",
    "build": "vite build",
    "preview": "vite preview",
    "electron:build": "vite build && electron-builder",
    "devAll": "npm-run-all -p dev electron "
  },
  "build": {
    "productName": "election",
    "appId": "com.xxx.app",
    "win": {
      "icon": "./logo.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "files": [
      "./dist",
      "./client",
      "./package.json"
    ],
    "directories": {
      "output": "build"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "vue": "^3.5.12"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.1.4",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "vite": "^5.4.10",
    "npm-run-all": "^4.1.5"
  }
}
